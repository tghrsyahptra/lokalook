<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_smart_budgeting_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judul_destinasi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <TextView
            android:id="@+id/tv_budgeting_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rencana_destinasi"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp" />

        <RadioGroup
            android:id="@+id/rg_pilihan_destinasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rb_wisata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wisata"
                android:buttonTint="@color/black" />

            <RadioButton
                android:id="@+id/rb_makanan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/makanan"
                android:buttonTint="@color/black"
                android:layout_marginStart="16dp" />
        </RadioGroup>

        <EditText
            android:id="@+id/et_tujuan_perjalanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/perjalanan"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:inputType="text" />

        <EditText
            android:id="@+id/et_budget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/budget"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp" />

        <EditText
            android:id="@+id/et_jumlah_orang"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/jml_orang"
            android:background="@drawable/edittext_background"
            android:padding="12dp"
            android:inputType="number"
            android:layout_marginBottom="24dp" />

        <Button
            android:id="@+id/btn_lanjutkan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_btn"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            android:padding="12dp"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
