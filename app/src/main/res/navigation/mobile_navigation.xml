<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.lokalook.lokalook.ui.fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_budgeting"
        android:name="com.lokalook.lokalook.ui.fragments.BudgetingFragment"
        android:label="fragment_budgeting"
        tools:layout="@layout/fragment_budgeting" />

    <fragment
        android:id="@+id/navigation_camera"
        android:name="com.lokalook.lokalook.ui.fragments.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" />

    <fragment
        android:id="@+id/navigation_trend"
        android:name="com.lokalook.lokalook.ui.fragments.TrendFragment"
        android:label="fragment_trend"
        tools:layout="@layout/fragment_trend" />

    <fragment
        android:id="@+id/navigation_user"
        android:name="com.lokalook.lokalook.ui.fragments.UserFragment"
        android:label="fragment_user"
        tools:layout="@layout/fragment_user" />

